<%= simple_form_for :search, url: root_path, method: 'GET', html: { class: 'form-inline my-2 my-lg-0 align-self-end' } do |f| %>
  <%= f.input :name, label: false, input_html: {placeholder:  'Busque produtos', value: "", class: "form-control btn-search-left"} %>
  <%# the input_html blank default is to reset the form on page reload %>
  <%= f.submit "Buscar", class: "btn btn-primary my-2 my-sm-0 btn-search-right" %>
<% end %>

<%# value = params['search']['name'] - manter para o usuario %>