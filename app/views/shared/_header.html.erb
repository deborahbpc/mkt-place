<!--======== Header ========-->
<header class="header-top">
  <div class="row align-items-center">
    <!---------- Logo ----------->
    <div class="col-3">
      <%= link_to root_path do %>
        <%= image_tag 'logo_hand.png', class: 'logo' %>
      <% end %>
    </div>
    <!---------- Busca ---------->
    <div class="col-4">
      <nav class=" navbar-light bg-light ">
        <form class="form-inline">
          <%= render 'shared/form', announces: all_announces %>
          <% if @search.present? && @announces.empty? %>
            <p>No matches found</p>
          <% elsif @search.present? && @search["name"] != '' %>
            <p>There are <%= @announces.count %> announces for <%= @search["name"] %></p>
          <% end %>
        </form>
      </nav>
    </div>
    <!---------- current_user menu ---------->
    <!---------- Criar anuncio ---------->
    <% if current_user %>
      <div class="col-1 ">
        <%= link_to new_user_announce_path(current_user), class: "btn-announce colors" do %>
          Create your ad<br>
          for free <i class="fas fa-bullhorn"></i>
        <% end %>
      </div>
      
      <div class="col-1">
        <%= "Welcome, #{current_user.first_name}" %>
      </div>
      <!--Edit Profile-->
      <div class="col-1">
        <%= link_to edit_user_registration_path, class:"btn-langue colors" do %>
          <i class="fas fa-user-edit"></i> Edit profile
        <% end %>
      </div>
      <!--Profile-->
      <div class="col-1">
        <%= link_to user_path(current_user), class:"btn-langue colors" do %>
          <i class="far fa-id-badge"></i> Your profile
        <% end %>
      </div>
      <!--Logout-->
      <div class="col-1">
        <%= link_to destroy_user_session_path, method: :delete, class:"btn-langue colors" do %>
          <i class="fas fa-sign-out-alt"></i> Logout
        <% end %>
      </div>
    <% end %>
    <!------------ Not logged ------------>
    <% unless current_user %>
      <!---------- Login ---------->
      <div class="col-1">
        <%= link_to new_user_session_path, class: "btn-login colors" do %>
          <i class="far fa-user"></i>Sign in
        <% end %>
      </div>
      <!---------- Sign Up ---------->
      <div class="col-1">
        <%= link_to new_user_registration_path, class: "btn-login colors" do %>
          <i class="fas fa-user-plus"></i></i>Sign up
      <% end %>
    </div>
  <% end %>
</div>
</header>
