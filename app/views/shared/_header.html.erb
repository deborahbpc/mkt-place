<!--======== Header ========-->
<div class="navbar navbar-expand-lg fixed-top d-flex w-100">
  <div class="row w-100 align-items-center justify-content-between">
    <!---------- Logo ----------->
    <div class="nav-item col-2">
      <%= link_to root_path do %>
        <%= image_tag 'logo_hand.png', class: 'logo' %>
      <% end %>
    </div>
    <!---------- Busca ---------->
    <div class="nav-item col-4 bg-light">
      <%= render 'shared/form', announces: @announces %>
      <%# if @search.present? && @announces.empty? %>
      <%# <p>No matches found</p> %>
      <%# elsif @search.present? && @search["name"] != '' %>
      <%# <p>There are <%= @announces.count %><%# announces for <%#= @search["name"] %><%#</p> %>
      <%# end %>
    </div>
    <!------------ Not logged ------------>
    <div>
      <% unless current_user %>
        <!---------- Login ---------->
        <%= link_to new_user_session_path, class: "btn-login colors" do %>
          <i class="far fa-user"></i>Sign in
        <% end %>
        <!---------- Sign Up ---------->
        <%= link_to new_user_registration_path, class: "btn-login colors" do %>
          <i class="fas fa-user-plus"></i></i>Sign up
      <% end %>
    <% end %>
  </div>
  <!---------- current_user menu ---------->
  <div class="">
    <% if current_user %>
      <%= link_to new_user_announce_path(current_user), class: "btn-announce colors" do %>
        Create your ad<br>
        for free <i class="fas fa-bullhorn"></i>
      <% end %>
    </div>
  <% end %>
  <!---------- Criar anuncio ---------->
  <div class="collapse navbar-collapse col-2" id="userMenu">
    <%= "Welcome, #{current_user.first_name}" %>
    <ul class="navbar-nav">
      <li class="nav-item dropdown col-2">
        <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <!--Profile-->
          <%= link_to user_path(current_user), class:"btn-langue colors dropdown-item" do %>
            <i class="far fa-id-badge"></i> Your profile
          <% end %>
          <!--Edit Profile-->
          <%= link_to edit_user_registration_path, class:"btn-langue colors dropdown-item" do %>
            <i class="fas fa-user-edit"></i> Edit profile
          <% end %>
          <!--Logout-->
          <%= link_to destroy_user_session_path, method: :delete, class:"btn-langue colors dropdown-item" do %>
            <i class="fas fa-sign-out-alt"></i> Logout
          <% end %>
        </div>
      </li>
    </ul>
  </div>
  <!--======== Navbar ========-->
  <div class="row w-100 justify-content-between">
    <div class="btn-group col-12" role="group">
      <button id="btnGroupDrop1 " type="button" class="btn btn-secondary dropdown-toggle btn-category btn-all-category" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        TODAS AS CATEGORIAS
      </button>
      <div class="dropdown-menu" aria-labelledby="btnGroupDrop1 ">
        <a class="dropdown-item box-dropdown" href="#">Categoria</a>
        <a class="dropdown-item" href="#">Categoria</a>
      </div>
      <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
        <button type="button" class="btn btn-secondary btn-category">Animal Planet</button>
        <button type="button" class="btn btn-secondary btn-category">Vêtements & Accessoires</button>
        <button type="button" class="btn btn-secondary btn-category">Reprise de bail</button>
        <button type="button" class="btn btn-secondary btn-category">Immobilier - Ventes</button>
        <button type="button" class="btn btn-secondary btn-category">Immobilier - locations</button>
        <button type="button" class="btn btn-secondary btn-category">Voitures de tourisme</button>
        <button type="button" class="btn btn-secondary btn-category">Offre d’emploi</button>
        <button type="button" class="btn btn-secondary btn-category">Erotique</button>
      </div>
    </div>
  </div>
</div>
</div>
