<div class="card-deck">

 <div class="row">

  <div class="col-sm-6">
    <div class="card">
      <%= link_to announce_path(announce) do %>
        <div class="card-body">
        <% if announce.photo.present? %>
          <div class="card-image">
            <%= cl_image_tag announce.photo.key, crop: :fill, class: "img-fluid mb-2" %>
          </div>
          <% end %>
          <h5 class="card-title"> <strong> <%= announce.product_name %> </strong> </h5>
          <p class="card-text"> <%= announce.product_description %></p>
          <p class="card-text"> <strong><i class="fas fa-dollar-sign"></i> <%= number_to_currency(announce.price, precision: 2, unit: "")  %> </strong></p>
        </div>
      <% end %>        
    </div>
  </div>

  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"> <strong> <%= announce.product_name %> </strong> </h5>
        <p class="card-text"> <%= announce.product_description %> </p>
        <p class="card-text">R$ <strong> <%= announce.price %> </strong> </p>
      </div>
    </div>
  </div>
 </div>

</div>



